<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_user_login"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.google.android.gms.samples.vision.ocrreader.CarActivity"
android:background="#2e86c1"
android:padding="20dp">

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/tapaser" />

<EditText
    android:id="@+id/editTextId"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#fbfefd"
    android:inputType="textPersonName"
    android:ems="10"
    android:text="UAT106C"
    android:layout_marginTop="14dp"
    android:textColor="#000"
    android:fontFamily="sans-serif-light"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:textSize="15sp"
    android:layout_below="@+id/imageView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/buttonGet"
    android:text="Search For Car"
    android:fontFamily="sans-serif-light"
    android:textSize="17sp"
    android:background="#008000"
    android:textColor="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editTextId"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/buttonGet"
        android:layout_marginTop="35dp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"/>


</RelativeLayout>
