<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="#fff"
tools:context="com.google.android.gms.samples.vision.ocrreader.Help">


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0123456789"
        android:fontFamily="sans-serif"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/msg"
        android:text="TRAFFIC ASSISTANT"
    android:gravity="center"
    android:layout_below="@+id/img_LogOut"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-light"
    android:textColor="#000"
    android:textColorHint="#404040"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/help_text"
    android:layout_marginTop="20dp"
    android:textSize="17dp"
    android:text="Help Information"
    android:layout_below="@+id/msg" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="GO HOME"
    android:textSize="15dp"
    android:fontFamily="sans-serif-light"
    android:id="@+id/go_home"
    android:textAllCaps="true"
    android:background="#2e86c1"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />


<ImageView
    android:id="@+id/img_LogOut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:src="@drawable/tapaser" />

</RelativeLayout>

